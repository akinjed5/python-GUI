    "from tkinter import *\n",
    "from tkinter import messagebox\n",
    "import ast\n",
    "\n",
    "window=Tk()\n",
    "window.title(\"Signup\")\n",
    "window.geometry('1480x750-8+20')\n",
    "window.configure(bg='#fff')\n",
    "\n",
    "\n",
    "def signup():\n",
    "    username=user.get()\n",
    "    password=code.get()\n",
    "    confirm_password=confirm_code.get()\n",
    "    if password==confirm_password:\n",
    "        try:\n",
    "            file=open('details.txt','r+')\n",
    "            d=file.read()\n",
    "            r=ast.literal_eval(d)\n",
    "            \n",
    "            dict2={username:password}\n",
    "            r.update(dict2)\n",
    "            file.truncate(0)\n",
    "            file.close()\n",
    "            \n",
    "            file=open('details.txt','w')\n",
    "            w=file.write(str(r))\n",
    "            \n",
    "            messagebox.showinfo('Signup', 'Successful sign up')\n",
    "        except:\n",
    "            file=open('details.txt','w')\n",
    "            pp=str({'Username':'password'})\n",
    "            file.write(pp)\n",
    "            file.close()\n",
    "                      \n",
    "    else:\n",
    "        messagebox.showerror('Invalid','Incorrect details')\n",
    "\n",
    "img = PhotoImage(file='chariti.png')\n",
    "Label(window,image=img,border=0,bg='white').place(x=160,y=254)\n",
    "\n",
    "frame=Frame(window,width=560,height=624,bg='#fff')\n",
    "frame.place(x=850,y=80)  \n",
    "\n",
    "heading=Label(frame,text=\"Sign Up\",fg=\"#57a1f8\",bg=\"white\",font=('Open Sans',27,'bold'))\n",
    "heading.place(x=100,y=5)   \n",
    "\n",
    "#####-----------------------------------------------------------------\n",
    "def on_enter(e):\n",
    "    fname.delete(0,'end')\n",
    "def on_leave(e):\n",
    "    if fname.get()=='':\n",
    "        fname.insert(0,'First Name')\n",
    "\n",
    "\n",
    "fname = Entry(frame,width=25,fg='black',highlightthickness=0,border=0,bg='white',font=('Open Sans',11))\n",
    "fname.place(x=30,y=75)\n",
    "fname.insert(0, 'First Name') \n",
    "fname.bind(\"<FocusIn>\", on_enter)\n",
    "fname.bind(\"<FocusOut>\", on_leave)\n",
    "\n",
    "Frame(frame,width=295,height=2,bg='black').place(x=25,y=102)\n",
    "\n",
    "#####-----------------------------------------------------------------\n",
    "\n",
    "def on_enter(e):\n",
    "    lname.delete(0,'end')\n",
    "def on_leave(e):\n",
    "    if lname.get()=='':\n",
    "        lname.insert(0,'Last Name')\n",
    "\n",
    "\n",
    "lname = Entry(frame,width=25,fg='black',highlightthickness=0,border=0,bg='white',font=('Open Sans',11))\n",
    "lname.place(x=30,y=140)\n",
    "lname.insert(0, 'Last Name') \n",
    "lname.bind(\"<FocusIn>\", on_enter)\n",
    "lname.bind(\"<FocusOut>\", on_leave)\n",
    "\n",
    "Frame(frame,width=295,height=2,bg='black').place(x=25,y=167)\n",
    "\n",
    "#####-----------------------------------------------------------------\n",
    "def on_enter(e):\n",
    "    user.delete(0,'end')\n",
    "def on_leave(e):\n",
    "    if user.get()=='':\n",
    "        user.insert(0,'Username')\n",
    "\n",
    "\n",
    "user = Entry(frame,width=25,fg='black',highlightthickness=0,border=0,bg='white',font=('Open Sans',11))\n",
    "user.place(x=30,y=205)\n",
    "user.insert(0, 'Username') \n",
    "user.bind(\"<FocusIn>\", on_enter)\n",
    "user.bind(\"<FocusOut>\", on_leave)\n",
    "\n",
    "Frame(frame,width=295,height=2,bg='black').place(x=25,y=232)\n",
    "\n",
    "#####---------------------------------------------------------------\n",
    "def on_enter(e):\n",
    "    code.delete(0,'end')\n",
    "def on_leave(e):\n",
    "    if code.get()=='':\n",
    "        code.insert(0,'Password')\n",
    "\n",
    "\n",
    "code = Entry(frame,width=25,fg='black',highlightthickness=0,border=0,bg='white',font=('Open Sans',11))\n",
    "code.place(x=30,y=270)\n",
    "code.insert(0,\"Password\")\n",
    "code.bind(\"<FocusIn>\",on_enter)\n",
