    "    confirm_code.delete(0,'end')\n",
    "def on_leave(e):\n",
    "    if confirm_code.get()=='':\n",
    "        confirm_code.insert(0,'Confirm_Password')\n",
    "\n",
    "\n",
    "confirm_code = Entry(frame,width=25,highlightthickness=0,fg='black',border=0,bg='white',font=('Open Sans',11))\n",
